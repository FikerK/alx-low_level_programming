#include "main.h"

/**
 * print_times_table - prints the n times table
 *
 * @n: the n times
 * Return: times table
 */
void print_times_table(int n)
{
	int i, j, mult = 0;

	for (i = 0; i <= 15; i++)
	{
		for (j = 0; j <= 15; j++)
		{
			mult = i * j;
			if (mult < 10)
			{
				_putchar(' ');
				_putchar(' ');
			}
			if (mult >= 10 && mult < 100)
			{
				_putchar(' ');
			}
			_putchar(mult + '0');
			if (j < 15)
			{
				_putchar(',');
			}
			if (j = 15)
			{
				_putchar('\n');
			}
		}
	}
}
